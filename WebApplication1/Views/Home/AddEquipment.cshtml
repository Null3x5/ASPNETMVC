@model WebApplication1.Models.Class1

@{
    ViewBag.Title = "AddEquipment";
}

@{
    List<SelectListItem> mySelectList = new List<SelectListItem>();
    foreach (var item in ViewBag.List)
    {
        mySelectList.Add(new SelectListItem() { Text = item.Name, Value = item.Name });
    }

}

<h4 class="text-center">Add Equipment</h4>
<form action="AddEquip" method="post">
    <table class="table table-hover table-bordered" id='sampleform' action="cgi-bin/formmail.pl" method="post">
        <tbody>
            <tr>
                <td>Category:</td>
                <td>
                    @Html.DropDownListFor(class1 => class1.Category, mySelectList, "--select category--")
                </td>
            </tr>
            <tr>
                <td>Code:</td>
                <td>@Html.TextBoxFor(class1 => class1.Code)</td>
            </tr>
            <tr>
                <td>Name:</td>
                <td>@Html.TextBoxFor(class1 => class1.Name)</td>
            </tr>
            <tr>
                <td>Description:</td>
                <td>@Html.TextBoxFor(class1 => class1.Description)</td>
            </tr>
            <tr>
                <td colspan="2" rowspan="1"><input name="add" type="submit" value="Add" class="btn btn-success"/></td>
            </tr>
        </tbody>
    </table>
</form>

    @Html.ActionLink("Back to Inventory", "Index")
